@using Entity
@model List<Category>

    <div class="shop__sidebar">
        <div class="sidebar__widget mb-55">
            <div class="sidebar__widget-title mb-25">
                <h3>Katagoriler</h3>
            </div>
            <div class="sidebar__widget-content">
                <div class="categories">
                    <div id="accordion">
                        @foreach (var item in Model)
                        {
                            
                       
                        <div class="card">
                            <div class="card-header white-bg" id="accessories">
                                <h5 class="mb-0">
                                    <button class="shop-accordion-btn" data-toggle="collapse" data-target="#collapseAccessories" aria-expanded="true" aria-controls="collapseAccessories">
                                        <a href="/Product/GetCategories/@item.CategoryId"> @item.CategoryName</a>
                                    </button>
                                </h5>
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
            </div>
   